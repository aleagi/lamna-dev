{
    "manifest_version": 3,
    "name": "Lamna Dev Analyzer",
    "version": "1.0",
    "description": "Analisa o HTML da p√°gina em tempo real com sistema de temas e caixa de detalhes unificada.",
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ]
}